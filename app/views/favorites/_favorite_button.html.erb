<% if current_user.favorited?(micropost) %>
    <%= link_to "Unfavorite", favorites_path(micropost_id: micropost.id),method: :delete, class: 'btn btn-info btn-sm' %>
 <% else %>
    <%= link_to "Favorite", favorites_path(micropost_id: micropost.id),method: :create, class: 'btn btn-success btn-sm' %>
 <% end %>